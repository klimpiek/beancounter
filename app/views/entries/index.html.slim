p#notice = notice

h1 Entries

table
  thead
    tr
      th Date
      th Directive
      th Arguments
      th colspan="3"

  tbody
    - @entries.each do |entry|
      tr
        td = entry.date
        td = entry.directive
        td = entry.arguments
        td = link_to 'Show', entry
        td = link_to 'Edit', edit_entry_path(entry)
        td = link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }

br

= link_to 'New Entry', new_entry_path
